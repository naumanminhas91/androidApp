<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetInput" >

   <TextView
       android:id="@+id/textView_dest"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/autocomplete_source"
       android:layout_marginTop="24dp"
       android:text="Destination"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <TextView
       android:id="@+id/textView_source"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:text="Source"
       android:textAppearance="?android:attr/textAppearanceLarge" />

   <AutoCompleteTextView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/autocomplete_source"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView_source"
       android:ems="10" >

       <requestFocus />
   </AutoCompleteTextView>

   <AutoCompleteTextView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/autocomplete_dest"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView_dest"
       android:ems="10" />

   <Button
       android:id="@+id/submitx"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerVertical="true"
       android:layout_toRightOf="@+id/textView_dest"
       android:text="Submit" />

</RelativeLayout>