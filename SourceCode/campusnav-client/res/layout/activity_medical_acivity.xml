<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/appbackelsex">

     <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Dial the following numbers in case of any Medical Emergency"
        android:textColor="#213375"
        android:textSize="17sp"
        android:textStyle="bold" 
        android:typeface="serif"/>
     
     <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="EMS Emergency Numbers"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#213375" />
     
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="ext:1122"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#213375"
        android:textSize="25sp" />
     
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:text="0345-3053692"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25sp"
        android:textColor="#213375" />
    
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:text="0324-4495820"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#213375"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:text="0333-3588329"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#213375"
        android:textSize="25sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignTop="@+id/textView6"
        android:text="Call"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/button2"
        android:text="Call"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignRight="@+id/textView1"
        android:text="Call"
        android:textSize="16sp" />


    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/button2"
        android:text="Call"
        android:textSize="16sp" />


    

   
    
</RelativeLayout>